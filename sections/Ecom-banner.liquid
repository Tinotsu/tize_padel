{% for block in section.blocks %}
  {% case block.type %}
  {% when 'background' %}
<div class="home-banner" style="background-image: url({{ block.settings.background_image | image_url: width: 1920 }});">
    <div class="banner-content">
      {% when 'title' %}
        <h2 class="banner-title">{{ block.settings.title }}</h2>
      {% when 'description' %}
        <p class="banner-description">{{ block.settings.description }}</p>
      {% when 'button' %}
        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                        <a href="{{ block.settings.button_link }}" class="banner-button">
                            {{ block.settings.button_text }}
                        </a>
         {% endif %}
    </div>
</div>
  {% endcase %}
 {% endfor %}
<style>
    .home-banner {
        position: relative;
        background-size: cover;
        background-position: center;
        padding: 60px 20px;
        text-align: center;
        color: #fff;
      height:100vh;
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 80px; /* Distance from the left edge */
        transform: translateY(-50%);
        text-align:left;
        padding: 20px;
        border-radius: 8px;
        max-width:600px; /* Control the width of the content area */
    }

    .banner-title {
        font-size: 2rem;
        margin: 0 0 10px;
    }

    .banner-description {
        font-size: 1rem;
        margin: 0 0 20px;
    }

    .banner-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #1c6da8;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .banner-button:hover {
        background-color: #0056b3;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .banner-title {
            font-size: 1.5rem;
        }

        .banner-description {
            font-size: 0.9rem;
        }

        .banner-content {
            max-width: 80%; /* Increase the width on smaller screens */
            left: 10px;
            right: 10px; /* Make sure the content doesn't go off-screen */
        }
    }

    @media (max-width: 480px) {
        .banner-title {
            font-size: 1.2rem;
        }

        .banner-description {
            font-size: 0.8rem;
        }

        .banner-content {
            max-width: 100%;
            padding: 10px;
        }
    }
</style>
{% schema %}


{
    "name": "Collection Banner",
    "settings": [
        {
            "type": "text",
            "id": "placeholder",
            "label": "Placeholder",
            "default": "This setting is required but not used."
        }
    ],
    "blocks": [
        {
            "type": "background",
            "name": "Background",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "background_image",
                    "label": "Banner Image"
                }
            ]
        },
        {
            "type": "title",
            "name": "Title",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Banner Title"
                  
                }
            ]
        },
       {
    "type": "description",
    "name": "Description",
    "settings": [
        {
            "type": "richtext",
            "id": "description",
            "label": "Banner Description",
            "default": "<p>Discover our latest products and offers.</p>"
        }
    ]
},

        {
            "type": "button",
            "name": "Button",
            "settings": [
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button Text",
                    "default": "Shop Now"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link",
                    "default": "/collections/all"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Collection Banner",
            "blocks": [
                {
                    "type": "background"
                },
                {
                    "type": "title"
                },
                {
                    "type": "description"
                },
                {
                    "type": "button"
                }
            ]
        }
    ]
}


{% endschema %}